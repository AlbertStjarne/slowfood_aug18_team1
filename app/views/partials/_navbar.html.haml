#navbar
    .container.mx-auto
        %nav.flex.items-center.justify-between.flex-wrap.bg-blue-lighter.p-6
            .flex.items-center.flex-no-shrink.text-white.mr-6
                %span.font-semibold.text-2xl.tracking-tight FeedMe
                .w-full.block.flex-grow.lg:flex.lg:items-center.lg:w-auto
                .text-sm.lg:flex-grow 
                    - if user_signed_in?
                        %p.px-4.py.2.block.mt-8.lg= link_to "Logout", destroy_user_session_path(@user), method: :delete
                    - else
                        %p.px-4.py.2.block.mt-8.lg= link_to "Login", new_user_session_path

